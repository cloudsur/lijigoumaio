    <script>
        // 统计点击量（本地存储示例）
        let clickCount = localStorage.getItem('investmentClicks') || 0;
        
        function handleInvestment() {
            // 点击量+1
            clickCount++;
            localStorage.setItem('investmentClicks', clickCount);
            
            // 模拟跳转（替换为实际返回链接）
            alert(`感谢投资！点击次数：${clickCount}`);
            window.location.href = "https://www.credamo.com/#/return";
        }
    </script>
