  <script>
    document.getElementById('investBtn').addEventListener('click', function () {
      // 记录点击次数
      let count = localStorage.getItem('investCount') || 0;
      count++;
      localStorage.setItem('investCount', count);

      // 返回 Creamer 页面
      window.location.href = 'https://www.credamo.com/#/help/web/4?page_id=416';
    });
  </script>
